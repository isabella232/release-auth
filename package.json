{
  "name": "release-auth",
  "scripts": {
    "start": "micro -p 5000 index.js",
    "test": "xo",
    "deploy": "now -e CLIENT_ID=@client-id -e CLIENT_SECRET=@client-secret"
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "rules": {
      "unicorn/no-process-exit": 0,
      "camelcase": 0
    }
  },
  "now": {
    "alias": "release-auth.now.sh"
  },
  "repository": "zeit/release-auth",
  "license": "MIT",
  "dependencies": {
    "micro": "7.0.6",
    "request": "2.79.0",
    "request-promise-native": "1.0.3"
  },
  "devDependencies": {
    "xo": "0.17.1"
  }
}
